{
  "compilerOptions": {
    "module": "ES2022",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "allowUnusedLabels": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "typeRoots": ["./@types"]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
